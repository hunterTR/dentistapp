<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/dentapp2</property>
    <property name="hibernate.connection.username">app</property>
    <property name="hibernate.connection.password">app</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="com/dentinium/hibernate/Rooms.hbm.xml"/>
    <mapping resource="com/dentinium/hibernate/Users.hbm.xml"/>
    <mapping resource="com/dentinium/hibernate/Admins.hbm.xml"/>
    <mapping resource="com/dentinium/hibernate/Company.hbm.xml"/>
    <mapping resource="com/dentinium/hibernate/Doctors.hbm.xml"/>
    <mapping resource="com/dentinium/hibernate/Reservations.hbm.xml"/>
    <mapping resource="com/dentinium/hibernate/Income.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
